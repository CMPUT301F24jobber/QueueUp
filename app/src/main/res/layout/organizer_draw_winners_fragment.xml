<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/draw_winner_button"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:text="Draw Winners"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        app:backgroundTint="@color/beige"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toTopOf="@id/send_notification_to_winners_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_notification_to_winners_button"
        android:layout_width="158dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:text="Send Notification to Winners"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        app:backgroundTint="@color/beige"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toTopOf="@id/send_notification_to_losers_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_notification_to_losers_button"
        android:layout_width="158dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:text="Send Notification to Losers"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        app:backgroundTint="@color/beige"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toTopOf="@id/send_notification_to_everyone_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_notification_to_everyone_button"
        android:layout_width="158dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:text="Send Notification to Everyone"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        app:backgroundTint="@color/beige"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
